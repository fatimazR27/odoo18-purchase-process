<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue List pour Chantiers -->
    <record id="view_chantier_tree" model="ir.ui.view">
        <field name="name">purchase.process.chantier.tree</field>
        <field name="model">purchase.process.chantier</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="project_id"/>
                <field name="localisation"/>
                <field name="chef_chantier"/>
                <field name="conducteur_travaux"/>
            </list>
        </field>
    </record>

    <!-- Vue Form pour Chantiers -->
    <record id="view_chantier_form" model="ir.ui.view">
        <field name="name">purchase.process.chantier.form</field>
        <field name="model">purchase.process.chantier</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="code" readonly="1"/>
                            <field name="project_id" required="1"/>
                            <field name="localisation"/>
                        </group>
                        <group>
                            <!-- Acteurs du chantier selon documentation -->
                            <field name="chef_chantier" string="Chef de Chantier"/>
                            <field name="conducteur_travaux" string="Conducteur de Travaux"/>
                        </group>
                    </group>
                    <field name="description" nolabel="1" placeholder="Description du chantier..."/>
                    
                    <!-- Demandes d'achat associées - seulement le nom pour référence -->
                    <field name="demande_achat_ids" nolabel="1">
                        <list>
                            <field name="name"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action pour Chantiers -->
    <record id="action_purchase_chantiers" model="ir.actions.act_window">
        <field name="name">Chantiers</field>
        <field name="res_model">purchase.process.chantier</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
