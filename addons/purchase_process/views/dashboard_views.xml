<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Dashboard Action -->
        <record id="action_dashboard" model="ir.actions.act_window">
            <field name="name">Tableau de Bord Achats</field>
            <field name="res_model">purchase.process.demande.achat</field>
            <field name="view_mode">pivot,graph,list,form</field>
            <field name="view_id" ref="view_demande_achat_tree"/>
            <field name="context">{
                "search_default_group_by_chantier": 1,
                "search_default_group_by_state": 1,
                "pivot_measures": ["quantite"],
                "graph_measures": ["quantite"]
            }</field>
        </record>

        <!-- Pivot View for Dashboard -->
        <record id="view_demande_achat_pivot" model="ir.ui.view">
            <field name="name">purchase.process.demande.achat.pivot</field>
            <field name="model">purchase.process.demande.achat</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="chantier_id" type="row"/>
                    <field name="state" type="col"/>
                    <field name="urgence" type="col"/>
                    <field name="quantite" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Graph View for Dashboard -->
        <record id="view_demande_achat_graph" model="ir.ui.view">
            <field name="name">purchase.process.demande.achat.graph</field>
            <field name="model">purchase.process.demande.achat</field>
            <field name="arch" type="xml">
                <graph type="bar">
                    <field name="chantier_id" type="row"/>
                    <field name="state" type="col"/>
                    <field name="quantite" type="measure"/>
                </graph>
            </field>
        </record>
    </data>
</odoo>
