<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Demande Achat List View -->
        <record id="view_demande_achat_tree" model="ir.ui.view">
            <field name="name">purchase.process.demande.achat.tree</field>
            <field name="model">purchase.process.demande.achat</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="chantier_id"/>
                    <field name="project_id"/>
                    <field name="article"/>
                    <field name="quantite"/>
                    <field name="urgence"/>
                    <field name="date_besoin"/>
                    <field name="state"/>
                    <field name="chef_chantier_id"/>
                </list>
            </field>
        </record>

        <!-- Demande Achat Form View -->
        <record id="view_demande_achat_form" model="ir.ui.view">
            <field name="name">purchase.process.demande.achat.form</field>
            <field name="model">purchase.process.demande.achat</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button name="action_envoyer_validation" string="Envoyer en Validation" type="object" class="btn-primary"
                                invisible="not show_send_validation_button()"/>
                        <button name="action_valider_technique" string="Valider Technique" type="object" class="btn-primary"
                                invisible="not show_validate_technical_button()"/>
                        <button name="action_creer_bon_commande" string="Créer Bon de Commande" type="object" class="btn-primary"
                                invisible="not show_create_order_button()"/>
                        <button name="action_valider_reception" string="Valider Réception" type="object" class="btn-primary"
                                invisible="not show_validate_reception_button()"/>
                        <button name="action_rejeter" string="Rejeter" type="object" class="btn-secondary"
                                invisible="not show_reject_button()"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="chantier_id" required="1"/>
                                <field name="project_id" readonly="1"/>
                                <field name="article" required="1"/>
                                <field name="quantite" required="1"/>
                                <field name="unite_mesure"/>
                            </group>
                            <group>
                                <field name="urgence"/>
                                <field name="date_besoin" required="1"/>
                                <field name="chef_chantier_id"/>
                                <field name="state" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="description" nolabel="1" placeholder="Description détaillée de l'article ou service demandé..."/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Demande Achat Search View -->
        <record id="view_demande_achat_search" model="ir.ui.view">
            <field name="name">purchase.process.demande.achat.search</field>
            <field name="model">purchase.process.demande.achat</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="article"/>
                    <field name="chantier_id"/>
                    <field name="project_id"/>
                    <field name="chef_chantier_id"/>
                    <filter string="En Attente Validation" name="technical_validation" domain="[('state','=','technical_validation')]"/>
                    <filter string="Approuvées" name="approved" domain="[('state','=','approved')]"/>
                    <filter string="Urgentes" name="urgent" domain="[('urgency','=','urgent')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Chantier" name="group_by_chantier" context="{'group_by': 'chantier_id'}"/>
                        <filter string="État" name="group_by_state" context="{'group_by': 'state'}"/>
                        <filter string="Urgence" name="group_by_urgence" context="{'group_by': 'urgence'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Demande Achat Action -->
        <record id="action_demande_achat" model="ir.actions.act_window">
            <field name="name">Demandes d'Achat</field>
            <field name="res_model">purchase.process.demande.achat</field>
            <field name="view_mode">list,form</field>
            <field name="context">{"search_default_technical_validation": 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer une nouvelle demande d'achat
                </p>
            </field>
        </record>
    </data>
</odoo>
