<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue List pour Projets -->
    <record id="view_project_tree" model="ir.ui.view">
        <field name="name">purchase.process.project.tree</field>
        <field name="model">purchase.process.project</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="localisation"/>
                <field name="state"/>
                <field name="date_debut"/>
                <field name="date_fin"/>
            </list>
        </field>
    </record>

    <!-- Vue Form pour Projets -->
    <record id="view_project_form" model="ir.ui.view">
        <field name="name">purchase.process.project.form</field>
        <field name="model">purchase.process.project</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="code" readonly="1"/>
                            <field name="localisation"/>
                        </group>
                        <group>
                            <field name="state"/>
                            <field name="date_debut"/>
                            <field name="date_fin"/>
                        </group>
                    </group>
                    <field name="description" nolabel="1" placeholder="Description du projet..."/>
                    
                    <!-- Chantiers associÃ©s - seulement les champs de base -->
                    <field name="chantier_ids" nolabel="1">
                        <list>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="localisation"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action pour Projets -->
    <record id="action_purchase_projects" model="ir.actions.act_window">
        <field name="name">Projets</field>
        <field name="res_model">purchase.process.project</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_draft': 1}</field>
    </record>
</odoo>
