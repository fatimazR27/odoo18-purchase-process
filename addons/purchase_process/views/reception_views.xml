<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Reception List View -->
        <record id="view_reception_tree" model="ir.ui.view">
            <field name="name">purchase.process.reception.tree</field>
            <field name="model">purchase.process.demande.achat</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="chantier_id"/>
                    <field name="article"/>
                    <field name="quantite"/>
                    <field name="purchase_order_id"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Reception Form View -->
        <record id="view_reception_form" model="ir.ui.view">
            <field name="name">purchase.process.reception.form</field>
            <field name="model">purchase.process.demande.achat</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="chantier_id" readonly="1"/>
                                <field name="article" readonly="1"/>
                                <field name="quantite" readonly="1"/>
                            </group>
                            <group>
                                <field name="purchase_order_id" readonly="1"/>
                                <field name="state" readonly="1"/>
                                <field name="date_besoin" readonly="1"/>
                            </group>
                        </group>
                        <group string="Contrôle Réception">
                            <field name="description" readonly="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_valider_reception" string="Valider Réception" type="object" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Reception Action -->
        <record id="action_reception" model="ir.actions.act_window">
            <field name="name">Réception et Contrôle</field>
            <field name="res_model">purchase.process.demande.achat</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('state', '=', 'purchase_order')]</field>
            <field name="context">{'create': False}</field>
        </record>
    </data>
</odoo>
